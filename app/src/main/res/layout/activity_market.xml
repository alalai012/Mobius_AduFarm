<?xml version="1.0" encoding="utf-8"?>
<!--장터게시판-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_item"
    android:background="#FAF1E6"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".MarketActivity">

    <RelativeLayout
        android:id="@+id/header_m"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="#ACCCB4"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plant Market"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:textColor="#064420"
            android:layout_centerVertical="true">

        </TextView>

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/vertical_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/market_item"
        android:layout_below="@id/header_m">

    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>